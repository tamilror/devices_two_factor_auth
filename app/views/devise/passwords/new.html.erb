<div class="card">
  <div class="card-header">Forgot your password?</div>
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
      <%= f.input :email, autofocus: true, autocomplete: 'email' %>
      <div class="actions">
        <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary mt-2' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
